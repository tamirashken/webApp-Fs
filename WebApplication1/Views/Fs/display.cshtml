<script>
    var dimension = [document.documentElement.clientWidth, document.documentElement.clientHeight];
    var c = document.getElementById("canvasId");
    var lon = Session["lon"];
    var lat = Session["lat"];
    var circle = document.querySelectorAll(".circle");
    var circleDisplay = document.getElementById("Display");
    c.width = dimension[0];
    c.height = dimension[1];
    var lonNorm = (lon + 180) * (c.width / 360);
    var latNorm = (lat + 90) * (c.height / 180);
    circleDisplay.style.lon = lonNorm;
    circleDisplay.style.lat = latNorm;
</script>


