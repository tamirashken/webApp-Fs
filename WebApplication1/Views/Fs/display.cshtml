
@{
    ViewBag.Title = "display";
}

<body>
    <canvas id="myCanvas"></canvas>
    <script>
        var c = document.getElementById("myCanvas");
        var ctx = c.getContext("2d");
        c.width = window.innerWidth;
        c.height = window.innerHeight;
        var lon = @Session["lon"];
        var lonNorm = (lon + 180) * (window.innerWidth / 360);
        var lat = @Session["lat"];
        var latNorm = (lat + 90) * (window.innerHeight / 180);
        ctx.beginPath();
        ctx.arc(lonNorm, latNorm, 45, 0, 2 * Math.PI);
        ctx.lineWidth = 15;
        ctx.lineStyle = 'black';
        ctx.fillStyle = 'red';
        ctx.fill();
        ctx.stroke();
    </script>
</body>